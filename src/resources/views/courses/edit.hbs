<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white text-center">
                    <h4>Sửa Khóa học</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/courses/{{course._id}}?_method=PUT">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tên Video</label>
                            <input value="{{course.name}}" type="text" name="name" id="name" class="form-control" placeholder="Nhập tên video" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Mô Tả</label>
                            <!-- Sửa cách lấy giá trị cho textarea -->
                            <textarea name="description" id="description" class="form-control" rows="3" placeholder="Nhập mô tả" required>{{course.description}}</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="videoID" class="form-label">Video ID</label>
                            <input value="{{course.videoID}}" type="text" name="videoID" id="videoID" class="form-control" placeholder="Nhập Video ID" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
