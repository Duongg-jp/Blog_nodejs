<div class="mt-4">
  <div class="row">
    <div class="col-lg-3">
      <button>Hoc ngay</button>
    </div>
    <div class="col-lg-9">
      <h2>{{getProp course "name"}}</h2>
      <iframe
        width="560"
        height="315"
        src="https://www.youtube.com/embed/{{getProp course "videoID"}}?si=_jAs4Oi7_kthbNMe"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen
      ></iframe>
      <h4>{{getProp course "description"}}</h4>
      <p>Video ID: {{getProp course "videoID"}}</p>
      <pre>{{json course}}</pre>
    </div>
  </div>
</div>